<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/post.svg">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1 class="title">
    <%= title %>
  </h1>

  <a href="/new">Add message</a>

  <ul class="messages">
    <% messages.forEach((message)=> {%>
      <li>
        <h2>
          <%= message.text %>
        </h2>
        <div>
          <h3>
            <%= message.user %>
          </h3>
          <p>
            <% const date=message.added %>
              <%= `${date.getFullYear()}/${date.getMonth()}/${date.getDate()}` %>
          </p>
        </div>
      </li>
      <% }) %>
  </ul>
</body>

</html>